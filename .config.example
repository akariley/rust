USER=$(whoami)
MONTH=$(date +"%-m")
LOGDATE=$(date +"%m-%d-%Y-%s")
LOGFILE=weekly-tasks_${LOGDATE}.log
FULLLOG=/home/${USER}/rust/log/${LOGFILE}

LGSMCONFIG=/path/to/lgsmserver.cfg

WEBRCONCMD=$(which webrcon-cli)
